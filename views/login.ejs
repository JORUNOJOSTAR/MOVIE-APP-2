<%- include('./partials/header'); %>
<%- include('./partials/top_nav'); %>
<div class="form">
    <h1>Login</h1>
    <div class="login-intro">
        <h4>By Login</h4>
        <ul>
            <li>You won't lost your watchlist.</li>
            <li>You can review and react to the movie's review</li>
        </ul>
    </div>
    <% if (typeof message !== "undefined") { %>
      <p class="err-message"><%= message %></p>
    <% } %>
    
    <form action="/login" method="post">
        <div class="form-group">
          <label for="exampleInputEmail1">Email address</label>
          <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" name="user_email" required>
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">Password</label>
          <input type="password" class="form-control"  id="exampleInputPassword1" placeholder="Password" name="password" required>
        </div>
        <a href="/register" class="signup-link">You can click here to signup</a>
        <button type="submit" class="btn btn-primary submit-btn">Submit</button>
    </form>
</div>
<%- include('./partials/common'); %>
<script src="/script/eventBindings.js"></script>