<%- include('./partials/header'); %>
<%- include('./partials/top_nav'); %>
<div class="form">
    <h1>SignUp</h1>
    <div class="login-intro">
        <h4>By SignUp</h4>
        <ul>
            <li>You won't lost your watchlist.</li>
            <li>You can review and react to the movie's review</li>
        </ul>
    </div>
    <% if (typeof message !== "undefined") { %>
      <% message.forEach(element => { %>
        <p class="err-message"><%= element %></p>
      <% }) %>
    <% } %>

    <form action="/register" method="post">
      <div class="form-group">
        <label for="userName">User Name</label>
        <input type="text" class="form-control" id="userName" aria-describedby="User Name" placeholder="Make a new user Name" name="user_name" required>
      </div>
      <div class="form-group">
        <label for="userAge">Your age</label>
        <input type="number" class="form-control" id="userAge" aria-describedby="User Age" placeholder="Enter your age" name="age" min="0" max="120" required>
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">Email address</label>
        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" name="user_email" required>
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1">Password</label>
        <input type="password" class="form-control" pattern=".{8,}" id="exampleInputPassword1" placeholder="Password" name="password" required>
      </div>
      <a href="/login" class="signup-link">You can click here to login</a>
      <button type="submit" class="btn btn-primary submit-btn">Submit</button>
  </form>
</div>
<%- include('./partials/common'); %>
<script src="/script/eventBindings.js"></script>